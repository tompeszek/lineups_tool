{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "lit_lineups/app.py",
                "--server.port=8501"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "${command:python.interpreterPath}"
        }
    ]
}